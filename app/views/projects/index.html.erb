<% content_for :header do %>
  <i class="fa fa-book"></i> Proyectos
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to '<i class="fa fa-home"></i> Inicio'.html_safe, root_path %></li>
  <li class="active">Proyectos</li>
<% end %>

<div class="row">
  <div class="col-xs-12">

    <!-- box: project-index -->
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Lista de proyectos</h3>
        <%= link_to new_project_path, class: 'btn btn-primary btn-sm btn-social pull-right', id: 'new-project-btn' do %>
          <i class="fa fa-plus"></i>
          <b>Nuevo proyecto</b>
        <% end %>
        <div class="box-tools">
          <%= form_tag projects_path, method: :get, remote: true do %>
            <div style="width: 200px;" class="input-group input-group-sm">
              <input type="text" placeholder="Buscar..." class="form-control pull-right" name="search">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="box-body">
        <table class="table table-bordered table-striped table-hover index">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th style="width: 50px"></th>
              <th>Nombre</th>
              <th>Web</th>
              <th>Description</th>
            </tr>
          </thead>
          <tbody id="projects">
            <%= render @projects %>
          </tbody>
        </table>
      </div>

    </div>
    <!-- /.box: project-index -->

  </div>
</div>