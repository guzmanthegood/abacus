<% content_for :header do %>
  <i class="fa fa-book"></i> Gestión de proyectos
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to '<i class="fa fa-home"></i> Inicio'.html_safe, root_path %></li>
  <li class="active">Gestión de proyectos</li>
<% end %>

<div class="row">
  <div class="col-lg-5 col-md-6 col-sm-12 col-xs-12">

    <div class="box box-primary">
      <div class="box-header">

        <%= link_to new_project_path, class: 'btn btn-primary btn-sm btn-social', id: 'new-project-btn' do %>
          <i class="fa fa-plus"></i>
          <b>Nuevo proyecto</b>
        <% end %>

        <div class="box-tools">
          <div style="width: 200px;" class="input-group input-group-sm">
            <input type="text" placeholder="Buscar" class="form-control pull-right" name="table_search">

            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>

      <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-hover index">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th style="width: 30px">Img</th>
              <th>Nombre</th>
              <th>Creado por</th>
              <th style="width: 112px">Fecha creación</th>
            </tr>
          </thead>
          <tbody id="projects">
            <%= render @projects %>
          </tbody>
        </table>
      </div>
    </div>


  </div>

  <div class="col-lg-7 col-md-6 col-sm-12 col-xs-12">
    <div class="box box-warning">
      <div class="box-header">
        <h3 id="project-form-title" class="box-title">Cosas!</h3>
      </div>
      <div id="project-form-body" class="box-body">
        
      </div>
    </div>
  </div>
</div>