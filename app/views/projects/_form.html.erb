<%= bootstrap_form_for project, remote: true do |f| %>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <%= f.text_field :name, placeholder: "Nombre", autofocus: true %>
  <%= f.text_field :web, placeholder: "Web", icon: "link" %>
  <%= f.text_area :description, placeholder: "Descripción" %>
  
  <%= f.submit class: 'btn btn-primary' %>

  <% if project.id != nil %>
  	<%= link_to('<i class="fa fa-hand-o-right"></i> Seleccionar proyecto'.html_safe, current_project_path(project), method: :put, class: "btn btn-success") %>

  	<%= link_to('<i class="fa fa-trash-o"></i> Eliminar proyecto'.html_safe, project_path(project), 
  								method: :delete, data: { confirm: '¿Seguro?' }, 
  								class: "text-danger pull-right", remote: true) %>
  <% end %>
<% end %>