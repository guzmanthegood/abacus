<header class="main-header">
  <!-- Logo -->
  <%= link_to root_path, class: 'logo' do %>
    <span class="logo-lg"><b>Abacus</b>App</span>
  <% end %>

  <!-- Header Navbar -->
  <nav class="navbar navbar-static-top" role="navigation">

    <!-- Sidebar toggle button-->
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <!-- Profile right menu -->
      <ul class="nav navbar-nav">
        <li>
          <%= bootstrap_form_tag url: root_path do |f|  %>
            <%= f.select :project, options_for_projects, 
                        { hide_label: true, include_blank: true }, 
                        { class: 'form-control select2', placeholder: 'Ir al proyecto', wrapper_class: 'project-select' } %>
          <% end %>
        </li>

        <li class="dropdown user user-menu">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag 'default-avatar.png', class: 'user-image', alt: 'User Image' %>
            <span class="hidden-xs"><%= current_user.name %></span>
          </a>

          <ul class="dropdown-menu">
            <li class="user-header">
              <%= image_tag 'default-avatar.png', class: 'img-circle', alt: 'User Image' %>
              <p>
                <%= current_user.name %>
                <small>Usuario desde: <%= I18n.l current_user.created_at, format: :only_date %></small>
              </p>
            </li>
 
            <li class="user-footer">
              <div class="pull-left">
                <%= link_to 'Mi cuenta', profile_path, class: 'btn btn-default btn-flat' %>
              </div>
              <div class="pull-right">
                <%= link_to 'Cerrar sesiÃ³n', destroy_user_session_path, method: :delete, class: 'btn btn-default btn-flat' %>
              </div>
            </li>
          </ul>
        </li>
      </ul>
      <!-- Profile right menu -->

    </div>
    <!-- ./Navbar Right Menu -->
  </nav>
</header>