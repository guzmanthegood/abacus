<% content_for :header do %>
  Gestión de usuarios
<% end %>

<% content_for :breadcrumb do %>
  <li>
    <%= link_to '<i class="fa fa-home"></i> Home'.html_safe, root_path %>
    <li class="active">Gestión de usuarios</li>
<% end %>

<div class="row">
  <div class="col-xs-5">
    
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title">Usuarios registrados</h3>
      </div>
      <div class="box-body">
        hola!
      </div>
    </div>

  </div>

  <div class="col-xs-7">

    <!-- box -->
    <div class="box box-warning">
      <div class="box-header">
        <h3 class="box-title">Usuarios registrados</h3>
        <div class="box-tools">
          <div style="width: 200px;" class="input-group input-group-sm">
            <input type="text" placeholder="Buscar..." class="form-control pull-right" name="table_search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
    
      <div class="box-body">
        <table class="table table-bordered table-hover index">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th>Nombre</th>
              <th>Email</th>
              <th style="width: 200px"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td></td>
            <% end %>
          </tbody>
        </table><br>
        <%= link_to new_user_path, class: 'btn btn-primary btn-sm pull-right btn-social' do %>
          <i class="fa fa-plus"></i>
          <b>Nuevo usuario</b>
        <% end %>
        </a>
      </div>

    </div>
    <!-- /.box -->



  </div>
</div>