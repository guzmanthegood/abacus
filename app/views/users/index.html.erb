<% content_for :header do %>
  Gestión de usuarios
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to '<i class="fa fa-home"></i> Home'.html_safe, root_path %></li>
  <li class="active">Gestión de usuarios</li>
<% end %>

<div class="row">
  <div class="col-xs-4">

    <div class="box box-primary">
      <div class="box-header">
        <h3 id="user-form-title" class="box-title">Nuevo usuario</h3>
      </div>
      <div id="user-form-body" class="box-body">
        <%= render 'form', user: @user %>
      </div>
    </div>
    
  </div>

  <div class="col-xs-8">

    <!-- box: users-index -->
    <div class="box box-warning">
      <div class="box-header">
        <h3 class="box-title">Usuarios registrados</h3>
        <%= link_to new_user_path, class: 'btn btn-primary btn-sm btn-social pull-right', id: 'new-user-btn', remote: true do %>
          <i class="fa fa-plus"></i>
          <b>Nuevo usuario</b>
        <% end %>
        <div class="box-tools">
          <%= form_tag users_path, method: :get, remote: true do %>
            <div style="width: 200px;" class="input-group input-group-sm">
              <input type="text" placeholder="Buscar..." class="form-control pull-right" name="search">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
              </div>
            </div>
          <% end %>

        </div>
      </div>
    
      <div class="box-body">
        <table class="table table-bordered table-hover index">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th>Nombre</th>
              <th style="width: 222px">Email</th>
            </tr>
          </thead>
          <tbody id="users">
            <%= render @users %>
          </tbody>
        </table>
      </div>

    </div>
    <!-- /.box: users-index -->
  </div>
</div>

<% content_for :js_hacks do %>
  <script type="text/javascript">
    sidebar_active("users");
  </script>
<% end %>