var error = <%= @user.errors.count == 0 ? 0 : 1 %>;
if (!error) {
	$("<%= escape_javascript(render @user) %>").appendTo("#users");	
	$("#user-form-title").html("Editar usuario #<%= @user.id %>");
}
$("#user-form-body").html("<%= escape_javascript(render 'form', user: @user) %>");
$("#user_name").focus();