var error = <%= @user.errors.count == 0 ? 0 : 1 %>;
if (!error) {
  animate_color("#user_<%=@user.id %>", "#D33724", "#FFF", true);                           

	$("#user-form-title").html("Nuevo usuario");
	$("#user-form-body").html("<%= escape_javascript(render 'form', user: User.new) %>");
	$("#sidebar-users-label").html(parseInt($("#sidebar-users-label").text()) - 1);
	$("#user_name").focus();
};