<%= bootstrap_form_for task, remote: true do |f| %>
  <%= f.hidden_field :author_id, value: current_user.id %>
  <%= f.hidden_field :project_id, value: current_user.current_project.id %>

  <div class="row">
    <div class="col-sm-4">
      <%= f.select :task_type, options_for_task_types(task.task_type) %>
    </div>
    <div class="col-sm-4">
      <%= f.select :status, Task.statuses_i18n %>
    </div>
    <div class="col-sm-4">
      <%= f.select :progress, options_for_task_progress(task.progress) %>
    </div>
  </div>

  <%= f.text_field :subject, hide_label: true, placeholder: 'Asunto: ' %>
  <%= f.text_area :description, hide_label: true, class: 'wysihtml5', placeholder: 'DescripciÃ³n: ', style: 'height: 250px' %>

  <%= link_to "<i class='fa fa-times'></i> Volver".html_safe, tasks_path, class: 'btn btn-default', remote: true %>

  <div class="pull-right">
    <!--
    <%= button_tag type: 'submit', class: 'btn btn-primary', value: "save_and_back" do %>
      <i class='fa fa-mail-reply-all'></i> Guardar y volver
    <% end %>
    -->

    <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
      <i class='fa fa-save'></i> Guardar
    <% end %>
  </div>
<% end %>

<script type="text/javascript">
  $(".wysihtml5").wysihtml5();
  bind_select2();
</script>