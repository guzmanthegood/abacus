<% status = I18n.t("task_status.#{params[:status]}").downcase if params[:status].present? %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 id="tasks-title"  class="box-title">Listado de tareas <%= status %></h3>
    <div id="tasks-tools" class="box-tools"></div>
  </div>

  <div id="tasks-body" class="box-body">
    <%= render 'tasks', tasks: @tasks %>
  </div>
</div>