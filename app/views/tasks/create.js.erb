var error = <%= @task.errors.count == 0 ? 0 : 1 %>;
if (error) {
  $("#main-frame").html("<%= escape_javascript(render 'new', task: @task) %>");
} else {
  $("#main-frame").html("<%= escape_javascript(render 'edit', task: @task) %>");  
  $("#sidebar-tasks-label").html(parseInt($("#sidebar-tasks-label").text()) + 1);
  $("div.status-menu-div").html("<%= escape_javascript(render 'status_menu') %>");
	animate_form_background("form.edit_task", "#00A65A");
  status_active("<%= session[:status] %>");
}