<% content_for :header do %>
  <i class="fa fa-cubes"></i> Tareas<small><%= @project.name %></small>
<% end %>

<% content_for :breadcrumb do %>
  <li><%= link_to '<i class="fa fa-home"></i> Inicio'.html_safe, root_path %></li>
  <li><%= link_to 'GestiÃ³n de proyectos', projects_path %></li>
  <li><%= link_to @project.name, project_path(@project) %></li>
  <li class="active">Tareas</li>
<% end %>

<div class="row">
  <div class="col-sm-12 col-xs-12">

    <div class="box box-primary">
      <div class="box-header">

        <%= link_to new_task_path, class: 'btn btn-primary btn-sm btn-social', id: 'new-project-btn' do %>
          <i class="fa fa-plus"></i>
          <b>Nueva tarea</b>
        <% end %>

        <div class="box-tools">
          <%= form_tag tasks_path, method: :get, remote: true do %>
            <div style="width: 200px;" class="input-group input-group-sm">
              <input type="text" placeholder="Buscar" class="form-control pull-right" name="search">
              <div class="input-group-btn">
                <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-hover index">
          <thead>
            <tr>
              <th style="width: 10px">#</th>
              <th style="width: 100px">Tipo</th>
              <th>Asunto</th>
              <th>Creado</th>
              <th>Fecha inicio</th>
            </tr>
          </thead>
          <tbody id="projects">
            <%= render @tasks %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

<% content_for :js_hacks do %>
  <script type="text/javascript">
    sidebar_active("tasks");
  </script>
<% end %>